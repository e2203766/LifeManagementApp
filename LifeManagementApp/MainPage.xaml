<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LifeManagementApp.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">
    <VerticalStackLayout Padding="20">
        <Label Text="Temperature:" FontSize="24"/>
        <Label x:Name="TemperatureLabel" FontSize="24"/>
        
        <Label Text="Wind Speed:" FontSize="24"/>
        <Label x:Name="WindspeedLabel" FontSize="24"/>
        
        <Label Text="Min Temperature:" FontSize="24"/>
        <Label x:Name="MinTemperatureLabel" FontSize="24"/>
        
        <Label Text="Max Temperature:" FontSize="24"/>
        <Label x:Name="MaxTemperatureLabel" FontSize="24"/>
        
        <Label Text="Precipitation Forecast:" FontSize="24"/>
        <Label x:Name="PrecipitationLabel" FontSize="24"/>
        
        <Button Text="Update Weather" Clicked="OnWeatherUpdateClicked"/>
    </VerticalStackLayout>
</ContentPage>


